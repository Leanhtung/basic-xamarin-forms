                            <Image Source="cake" WidthRequest="50" HeightRequest="50" Aspect="AspectFit"/>
                            <Label Text="Cakes" Style="{StaticResource LabelTitleStyle}" HorizontalTextAlignment="Center" TextColor="White"/>
                        </StackLayout>
                    </Frame>
                </Grid>
