                            <Image Source="cup" WidthRequest="50" HeightRequest="50" Aspect="AspectFit"/>
                            <Label Text="Drinks" Style="{StaticResource LabelTitleStyle}" HorizontalTextAlignment="Center" TextColor="White"/>
                        </StackLayout>
